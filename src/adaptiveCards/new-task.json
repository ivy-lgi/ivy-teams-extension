{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "${kind}",
      "size": "Large",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Name: ${name}",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Description: ${description}",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Start: ${start}",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Expiry: ${expiry}",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Activator: ${activator}",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Priority: ${priority}",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "State: ${state}",
      "isSubtle": true,
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Start Task",
      "url": "${link}"
    }
  ]
}